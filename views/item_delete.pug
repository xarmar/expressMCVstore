extends layout

block content
  nav#navbar.row
    div.navbar--burger(aria-controls= "primary-navigation" aria-expanded="false") 
      span.navbar--burger__span
      span.navbar--burger__span
      span.navbar--burger__span
    div#navbar-menu.navbar--background(data-visible="false")
      ul.navbar--menu
        div
          li.navbar--menu__item
            h6.navbar--menu__info #{category.title}
        div.navbar--menu__navigation
          li.navbar--menu__item
            a.navbar--menu__link(href=`/inventory/category/${category.machine_title}/${category._id}`) Back to Category
          li.navbar--menu__item
            a.navbar--menu__link(href=`/inventory`)  Back to Inventory
  script(src="/javascripts/header.js" type="text/javascript")
  div.container--fluid
      div.row.mt-2
        div.row.form
          div.col-12.form--container
            div.col-lg-12.form--column__title
              h3 You're about to delete #[strong #{item.title}] from the #[u #{category.title}] category... 
              div.col-12
                form(method='POST' action='' enctype="multipart/form-data")
                  div.form-group.row
                    div.col-xl-5
                      label(for='title') Title:
                      input#title.form-control(name='title' required value=item.title disabled)
                    div.col-xl-5
                      label(for='description') Description:
                      input#description.form-control(name='description' required value=item.description disabled)
                  div.form-group.row
                    div.col-xl-5
                      label(for='price') Price:
                      input#price.form-control(type='number' step="0.01" name='price' required value=item.price disabled)
                    div.col-xl-5
                      label(for='stock') Stock:
                      input#stock.form-control(type='number' name='stock' required value=item.stock disabled)
                    div.form-group.row
                      div.col-xl-5
                        label(for='categoryId') Category:
                        select#categoryId.form-control(name='categoryId' required disabled)
                          option(value=category._id) #{category.title}
                      div.col-xl-5
                        label(for='image') Item image:
                        input#imageUrlt.form-control(type= 'file' name='image' value="" disabled)
                    div.form-group.row
                      div.col-12.form--column__submit
                        input.btn.btn-outline-danger(type="submit" value="Delete item")