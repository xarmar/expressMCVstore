extends layout

block content
  div.container
    div.row.category-list--container
      each category in category_list
          a.col-md-12.col-lg-6(href=category.url)
            div.col-12.category--background(style=`background-image: url(${category.imgUrl}`)
              div.category--after-overlay
              h5 #[strong #{category.title}]
              
              if category.description
                p #{category.description}
      else
        p There are no categories available. 

